{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "object-curly-spacing": ["error", "always"],
    "space-infix-ops": ["error"]
  },
  "env": {
    "node": true,
    "browser": true
  }
}
